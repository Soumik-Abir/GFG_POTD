class Solution {
  public:
    long long findSmallest(vector<int> &arr) {
        // Your code goes here.
        long long ans=1;
        for(int i=0;i<arr.size();i++){
            if(arr[i]>ans) return ans;
            ans+=arr[i];
        }
        return ans;
    }
};

// Question link -> https://www.geeksforgeeks.org/problems/smallest-number-subset1220/1
//  Video link -> https://youtu.be/TmAYOEfaSng?si=A9bEJIWW8VEGPEB8